@model IEnumerable<snackbaryounes.Models.MenuItem>

@{
    ViewData["Title"] = "Ons Menu";
}

<h2>Ons Menu</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Status</th>
            <th>ProductCategory</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@(item.Status ? "Available" : "Not Available")</td>
                <td>@(item.ProductCategory != null ? item.ProductCategory.Name : "No Category")</td>
                <!-- Zorg ervoor dat 'ProductCategory' geladen is en 'CategoryName' correct wordt weergegeven -->
            </tr>
        }
    </tbody>
</table>
